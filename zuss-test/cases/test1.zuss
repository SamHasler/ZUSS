	border: 1px solid blue;
	margin: 2px 3px;
}
a:hover, .another div {
	.nest span {
		overflow: auto; display: /*comment 1*/
		inline-block;
		background: white /*comment 2*/ !important;
	}
	&.float {
		display: float;
		h1 {
			color: blue;
			h2 {
				color: #999;
			}
		}
	}
	backgournd-image: @var0 url(/dir/whatever);
